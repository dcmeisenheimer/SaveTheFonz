@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="site-layout">
    <div class="main-container">
        @* Header *@
        <div class="header-container">
            <span class="site-title">SAVETHEFONZ.COM</span>
        </div>
        <hr class="header-divider" />

        @* Navigation *@
        <nav class="nav-container">
            <NavLink href="" class="nav-link" ActiveClass="nav-link-active" Match="NavLinkMatch.All">ABOUT</NavLink>
            <NavLink href="video" class="nav-link" ActiveClass="nav-link-active">VIDEO</NavLink>
            <NavLink href="purchase" class="nav-link" ActiveClass="nav-link-active">PURCHASE</NavLink>
            <NavLink href="contact" class="nav-link" ActiveClass="nav-link-active">CONTACT</NavLink>
        </nav>

        @* Page Content *@
        <main>
            @Body
        </main>
    </div>
</div>

@code {
    private string GetNavClass(string path)
    {
        var currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        if (string.IsNullOrEmpty(currentPath)) currentPath = "/";
        else currentPath = "/" + currentPath;

        bool isActive = currentPath.Equals(path, StringComparison.OrdinalIgnoreCase);
        return isActive ? "nav-link nav-link-active" : "nav-link";
    }
}
